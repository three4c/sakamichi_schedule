{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "outDir": "./dist"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
